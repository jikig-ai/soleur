{
  "permissions": {
    "allow": [
      "Bash(git add -A && git commit:*)",
      "Bash(git add && git commit:*)",
      "Bash(git commit -m:*)",
      "Bash(git commit -F:*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_EFFORT_LEVEL": "high"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/guardrails.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/worktree-write-guard.sh"
          }
        ]
      }
    ]
  }
}

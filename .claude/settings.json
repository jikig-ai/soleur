{
  "env": {
    "CLAUDE_CODE_EFFORT_LEVEL": "high"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/guardrails.sh"
          }
        ]
      }
    ]
  }
}
